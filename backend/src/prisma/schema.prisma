// Prisma schema for MongoDB
// See https://www.prisma.io/docs/orm/prisma-schema/data-model for details

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String
  // Add more fields as needed
}

model Course {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  instructor  String
  // Add more fields as needed
}
